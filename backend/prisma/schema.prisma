// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stats     UserStats?
  answers   UserAnswer[]

  @@map("users")
}

model UserStats {
  id                   String   @id @default(uuid())
  userId               String   @unique
  rating               Int      @default(0)
  totalEmails          Int      @default(0)
  correctIdentified    Int      @default(0)
  incorrectIdentified  Int      @default(0)
  scamsClicked         Int      @default(0)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_stats")
}

model UserAnswer {
  id           String   @id @default(uuid())
  userId       String
  emailId      String
  userAnswer   Boolean  // true = phishing, false = legitimate
  isCorrect    Boolean
  answeredAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_answers")
  @@index([userId])
  @@index([emailId])
}
